package operation;

public class Ex04 {

	public static void main(String[] args) {
		
		System.out.println("문자열" + "결합" + "연산자");
		
		System.out.println(2 + "학년" + 10 + "반");
		// 한쪽이 문자열이면  + 연산자는 문자열 결합 연산자로 사용되어
		// 다른 피연산자를 문자열로 변환하고 결합한다.
		
		System.out.println("홍길동의 나이 : " + (2 + 10 + 5) + "살");
		
		System.out.println(2 + 1 + 1 + "학년" + 2 + 4 + 1 + "반"); // 4학년241반
		
	
	}
}
